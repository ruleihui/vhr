<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.system.basic.JobLevelDao">

    <resultMap id="BaseResultMap" type="com.example.entity.JobLevel">
        <!--@Table jobLevel-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="titleLevel" column="titleLevel" jdbcType="OTHER"/>
        <result property="createDate" column="createDate" jdbcType="TIMESTAMP"/>
        <result property="enabled" column="enabled" jdbcType="BOOLEAN"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select id,
               name,
               titleLevel,
               createDate,
               enabled
        from vhr.joblevel
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select id,
               name,
               titleLevel,
               createDate,
               enabled
        from vhr.joblevel limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->

    <select id="queryAll" resultMap="BaseResultMap">
        select
        id, name, titleLevel, createDate, enabled
        from vhr.joblevel
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="titleLevel != null">
                and titleLevel = #{titleLevel}
            </if>
            <if test="createDate != null">
                and createDate = #{createDate}
            </if>
            <if test="enabled != null">
                and enabled = #{enabled}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vhr.joblevel(name, titleLevel, createDate, enabled)
        values (#{name}, #{titleLevel}, #{createDate}, #{enabled})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vhr.joblevel
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="titleLevel != null">
                titleLevel = #{titleLevel},
            </if>
            <if test="createDate != null">
                createDate = #{createDate},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from vhr.joblevel
        where id = #{id}
    </delete>
    <!--通过多个主键删除-->
    <delete id="deleteByIds">
        delete from vhr.joblevel where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
</mapper>